{
  "name": "xapphire13-server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc && yarn run copy-sql",
    "build:prod": "yarn run build",
    "start": "node ./dist/src/index.js",
    "start:watch": "nodemon --watch ./dist ./dist/src/index.js",
    "start:debug": "node --inspect-brk ./dist/src/index.js",
    "copy-sql": "xcopy /Y /E /I \"./src/sql\" \"./dist/sql\""
  },
  "dependencies": {
    "@octokit/rest": "^15.15.1",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.2",
    "boom": "^7.1.1",
    "crc-32": "^1.2.0",
    "express": "^4.16.4",
    "fs-extra": "^7.0.0",
    "globby": "^8.0.1",
    "jsonwebtoken": "^8.1.1",
    "moment": "^2.20.1",
    "node-fetch": "^2.2.0",
    "otplib": "^10.0.1",
    "reflect-metadata": "^0.1.12",
    "routing-controllers": "^0.7.6",
    "semaphore-async-await": "^1.5.1",
    "sqlite": "^3.0.0",
    "tsyringe": "^2.1.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.16.8",
    "@types/boom": "^7.1.1",
    "@types/express": "^4.11.1",
    "@types/fs-extra": "^5.0.4",
    "@types/globby": "^8.0.0",
    "@types/handlebars": "^4.0.39",
    "@types/jest": "^23.3.5",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/node": "^8.0.0",
    "@types/node-fetch": "^2.1.2",
    "@types/otplib": "^7.0.0",
    "nodemon": "^1.18.4"
  },
  "jest": {
    "displayName": "server",
    "testMatch": [
      "<rootDir>/tests/**/*.test.ts?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}

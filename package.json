{
	"name": "xapphire13.com",
	"private": true,
	"author": "Xapphire13",
	"license": "MIT",
	"scripts": {
		"test": "jest",
		"test:debug": "node --inspect-brk ./node_modules/jest/bin/jest --verbose -i",
		"build": "lerna run build",
		"build:prod": "lerna run build:prod",
		"prepush": "yarn test",
		"postinstall": "cd scripts && yarn && cd .. && tsc -p scripts && lerna bootstrap",
		"deploy": "node ./scripts/deploy.js"
	},
	"devDependencies": {
		"@types/node": "^8.0.0",
		"husky": "^0.14.3",
		"jest": "^22.4.0",
		"jest-runner-tslint": "^1.0.5",
		"lerna": "^2.11.0",
		"ts-jest": "^22.4.6",
		"ts-loader": "^4.1.0",
		"tslint": "^5.10.0",
		"tslint-eslint-rules": "^5.3.1",
		"typescript": "^2.8.3"
	},
	"jest": {
		"projects": [
			"<rootDir>/packages/*",
			{
				"displayName": "tslint",
		    "runner": "jest-runner-tslint",
		    "moduleFileExtensions": ["ts", "tsx"],
		    "testMatch": ["**/*.ts"]
		  }
		],
		"testPathIgnorePatterns": ["/node_modules/", "/dist/"]
	}
}

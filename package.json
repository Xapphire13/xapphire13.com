{
	"name": "xapphire13.com",
	"private": true,
	"author": "Xapphire13",
	"license": "MIT",
	"scripts": {
		"test": "jest",
		"test:debug": "node --inspect-brk ./node_modules/jest/bin/jest --verbose -i",
		"build": "lerna run build",
		"build:prod": "lerna run build:prod",
		"start": "lerna run --parallel start",
		"start:watch": "lerna run --parallel start:watch",
		"prepush": "yarn test",
		"postinstall": "cd scripts && yarn && cd .. && tsc -p scripts && lerna bootstrap",
		"deploy": "node ./scripts/deploy.js"
	},
	"devDependencies": {
		"@types/node": "^8.0.0",
		"husky": "^3.0.0",
		"jest": "^24.8.0",
		"jest-runner-tslint": "^1.0.5",
		"lerna": "^3.0.0",
		"ts-jest": "^24.0.2",
		"ts-loader": "^6.0.4",
		"tslint": "^5.10.0",
		"tslint-eslint-rules": "^5.3.1",
		"typescript": "^3.5.2"
	},
	"jest": {
		"globals": {
			"Xapphire13": null
		},
		"projects": [
			"<rootDir>/packages/*",
			{
				"displayName": "tslint",
				"runner": "jest-runner-tslint",
				"moduleFileExtensions": [
					"ts",
					"tsx"
				],
				"testMatch": [
					"**/*.ts"
				]
			}
		],
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/dist/"
		]
	}
}
